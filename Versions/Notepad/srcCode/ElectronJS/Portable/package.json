  },
  "build": {
    "appId": "com.app.sidgautamnotes",
    "productName": "SidGautamNotes",
    "win": {
      "icon": "src/assets/icon.png",
      "target": [
        "portable"
      ],
      "cscLink": "./cert.pfx",
      "cscKeyPassword": "Bhavana123"
    },
    "portable": {
      "artifactName": "SidGautamNotes-Portable.exe"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "app.js",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
