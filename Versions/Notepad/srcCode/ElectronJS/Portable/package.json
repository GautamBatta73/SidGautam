{
  "name": "SidGautamNotes",
  "version": "1.2.0",
  "description": "A simple text-editor",
  "author": "Gautam Batta",
  "license": "ISC",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12"
